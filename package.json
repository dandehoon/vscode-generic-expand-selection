{
	"name": "vscode-generic-expand-selection",
	"displayName": "Generic Expand Selection",
	"description": "Intelligently expand selection to nearest scoped characters like quotes, brackets, and more.",
	"publisher": "dandehoon",
	"version": "0.0.2",
	"repository": {
		"type": "git",
		"url": "git://github.com/dandehoon/vscode-generic-expand-selection.git"
	},
	"engines": {
		"vscode": "^1.92.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onStartupFinished"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "vscode-generic-expand-selection.expandSelection",
				"title": "Expand Selection"
			},
			{
				"command": "vscode-generic-expand-selection.shrinkSelection",
				"title": "Shrink Selection"
			}
		],
		"keybindings": [
			{
				"command": "vscode-generic-expand-selection.expandSelection",
				"key": "ctrl+e",
				"mac": "cmd+e",
				"when": "editorTextFocus"
			},
			{
				"command": "vscode-generic-expand-selection.shrinkSelection",
				"key": "ctrl+shift+e",
				"mac": "cmd+shift+e",
				"when": "editorTextFocus && editorHasSelection"
			}
		]
	},
	"scripts": {
		"check": "tsc --noEmit && eslint src --ext ts",
		"test": "tsc -p . --outDir out && node esbuild.js && vscode-test",
		"build": "pnpm run check && node esbuild.js --production && pnpm dlx vsce package --no-dependencies -o out.vsix",
		"publish": "pnpm dlx vsce publish --no-dependencies",
		"vsce:install": "pnpm run build && code --install-extension out.vsix"
	},
	"devDependencies": {
		"@eslint/js": "^9.29.0",
		"@types/mocha": "^10.0.10",
		"@types/node": "22.x",
		"@types/vscode": "^1.92.0",
		"@typescript-eslint/eslint-plugin": "^8.34.1",
		"@typescript-eslint/parser": "^8.34.1",
		"@vscode/test-cli": "^0.0.11",
		"@vscode/test-electron": "^2.4.0",
		"@vscode/vsce": "^3.5.0",
		"esbuild": "^0.25.5",
		"eslint": "^9.29.0",
		"mocha": "^11.7.0",
		"typescript": "5.5.4"
	},
	"packageManager": "pnpm@10.12.1+sha512.f0dda8580f0ee9481c5c79a1d927b9164f2c478e90992ad268bbb2465a736984391d6333d2c327913578b2804af33474ca554ba29c04a8b13060a717675ae3ac"
}
